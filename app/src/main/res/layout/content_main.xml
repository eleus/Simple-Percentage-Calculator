<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.weebly.simplepercentagecalculator.simplepercentagecalculator.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:textSize="60dp"
        android:id="@+id/totalTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What is"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:layout_below="@+id/totalTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:textSize="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/percentageText"
        android:hint="Enter Percentage"
        android:textAlignment="center"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/numberText"
        android:hint="Enter Number"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/percentageText"
        android:layout_alignStart="@+id/percentageText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="%"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_alignTop="@+id/percentageText"
        android:layout_toRightOf="@+id/numberText"
        android:layout_toEndOf="@+id/numberText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="of"
        android:id="@+id/textView3"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/percentageText"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALCULATE"
        android:id="@+id/calcButton"
        android:layout_below="@+id/numberText"
        android:layout_marginTop="41dp"
        android:clickable="false"
        android:background="#ff669900"
        android:layout_alignRight="@+id/numberText"
        android:layout_alignEnd="@+id/numberText"
        android:layout_alignLeft="@+id/numberText"
        android:layout_alignStart="@+id/numberText"
        android:textColor="#ffffff"
        android:textSize="18dp" />

</RelativeLayout>
